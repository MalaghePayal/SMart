@model List<Product>
<h1>Products</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Category?.Name
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    <a class="btn btn-secondary" asp-route-id="@item.ProductId" asp-controller="Products" asp-action="Edit">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.ProductId" asp-controller="Products" asp-action="Delete" onclick="return ConfirmDelete()">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<p><a class="btn btn-primary" asp-controller="Products" asp-action="Add">Add</a></p>

@section Scripts {
    <script>
        function ConfirmDelete()
        {
            return confirm("Are you sure you want to delete this category ?")
        }
    </script>
}
