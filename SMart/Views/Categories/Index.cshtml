@model List<Category>
<h1>Categories</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model )
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a class="btn btn-secondary" asp-route-id="@item.CategoryId" asp-controller ="Categories" asp-action="Edit">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.CategoryId" asp-controller="Categories" asp-action="Delete" onclick="return ConfirmDelete()">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
<p><a class="btn btn-primary" asp-controller="Categories" asp-action="Add">Add</a></p>

@section Scripts{
    <script>
        function ConfirmDelete()
        {
            return confirm("Are you sure you want to delete this category ?")
        }
    </script>
}
